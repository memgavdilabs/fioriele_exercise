<mvc:View
	controllerName="com.myorg.myapp.controller.Cart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

    <f:DynamicPage id="dynamicPageId">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Cart"/>
				</f:heading>	
			</f:DynamicPageTitle>
		</f:title>
        <f:content>
			<VBox >
                <Table id="CartTable" items="{ path: 'cartModel>/Products' }">				
                    <columns>
                        <Column>
                            <Text text="Product" />
                        </Column>	                       
                        <Column>
                            <Text text="Item price" />
                        </Column>	
                        <Column>
                            <Text text="Quatity" />
                        </Column>							
                        <Column>
                            <Text text="Total price" />
                        </Column>							
                    </columns>			
                    <items>
                        <ColumnListItem type="Active" vAlign="Middle">
                            <cells>
                                <Text text="{cartModel>productTitle}"/>		
                            </cells>	
                            <cells>
                                <Text text="{cartModel>price}"/>		
                            </cells>	
                            <cells>
                                <StepInput value="{cartModel>quantity}" width="30px" change="onQuatityStepInputChange"/>		
                            </cells>				
                            <cells>
                                <Text text="{cartModel>totalPrice}"/>		
                            </cells>					
                        </ColumnListItem>
                    </items>                
                </Table>     
                 <HBox justifyContent="End" class="sapUiSmallMargin">
                    <Title text="Total price" class="sapUiTinyMarginEnd"/>
                    <Text text="{cartModel>/TotalPrice}" />                    
                </HBox>
                <HBox justifyContent="Center" class="sapUiSmallMargin">
                    <Button text="Continue shopping" press="onContShopping" icon="sap-icon://fallback" class="sapUiSmallMarginEnd"/>                 
                    <Button text="Checkout" press="onCheckout" icon="sap-icon://cart-approval" class="sapUiSmallMarginEnd"/>                 
                </HBox>
            </VBox>
		</f:content>
				
	</f:DynamicPage>
</mvc:View>